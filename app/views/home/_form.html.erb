<form class="form-group form-inline" align="center" action="/events" method="get">
  <fieldset>
    <!-- PgSearch -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12">

          <div class="form-group form-inline">
            <label class="col-md-3 control-label" for="search"></label>  
            <input id="search" name="search" type="text" style="width:200px" placeholder="Search" class="form-control">
          </div>

          <div class="form-group form-inline">
            <label class="col-md-3 control-label" for="from"></label>  
            <input id="from" name="start_date" type="text" style="width:150px" placeholder="From" class="form-control">
          </div>
          <!-- Text input-->
          <div class="form-group form-inline">
            <label class="col-md-3 control-label" for="to"></label>  
            <input id="to" name="end_date" type="text" style="width:150px" placeholder="To" class="form-control"> 
          </div>
          <!-- Select Basic -->
          <div class="form-group form-inline">
            <label class="col-md-3 control-label" for="location"></label>  
            <input id="city" name="city" type="text" style="width:150px" placeholder="City" class="form-control"> 
          </div>
          <!-- Select Basic -->
          <div class="form-group form-inline" >
            <label class="col-md-3 control-label" for="cause"></label>  
            <%= select_tag :categories, @categories.html_safe, id: "cause", name: "the_category", placeholder: "Cause", class: "form-control", style:"width:150px"%> 
          </div>
          <!-- /.row -->
          <div class="form-group form-inline">
            <label class="col-md-3 control-label" for="submit"></label>
            <button id="submit" name="submit" class="btn btn-primary">
              <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
            </button>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
</form>

<script>
  $( function() {
    var dateFormat = "mm/dd/yy",
      from = $( "#from" )
        .datepicker({
          defaultDate: "+1w",
          changeMonth: true,
          numberOfMonths: 2
        })
        .on( "change", function() {
          to.datepicker( "option", "minDate", getDate( this ) );
        }),
      to = $( "#to" ).datepicker({
        defaultDate: "+1w",
        changeMonth: true,
        numberOfMonths: 2
      })
      .on( "change", function() {
        from.datepicker( "option", "maxDate", getDate( this ) );
      });
 
    function getDate( element ) {
      var date;
      try {
        date = $.datepicker.parseDate( dateFormat, element.value );
      } catch( error ) {
        date = null;
      }
 
      return date;
    }
  } );
  </script>