<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Skills</th>
      <th>Description</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>Street address</th>
      <th>Postal code</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Birthdate</th>
      <th>Contact email</th>
      <th>Language</th>
      <th>Work</th>
      <th>Education</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.skills %></td>
        <td><%= profile.description %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.phone %></td>
        <td><%= profile.street_address %></td>
        <td><%= profile.postal_code %></td>
        <td><%= profile.city %></td>
        <td><%= profile.state %></td>
        <td><%= profile.country %></td>
        <td><%= profile.birthdate %></td>
        <td><%= profile.contact_email %></td>
        <td><%= profile.language %></td>
        <td><%= profile.work %></td>
        <td><%= profile.education %></td>
        <td><%= profile.user %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

